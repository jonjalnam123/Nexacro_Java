    <Script type="xscript5.1"><![CDATA[//버튼 컴포넌트 만듬
this.btn_Exe2_1_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var objBtn = new Button(); //버튼 말고도 다른 컴포넌트도 만들 수 있음
	objBtn.init("btn_Comp", 320, 380, 150, 130); //사이즈
	this.addChild("btn_Comp", objBtn); 
	objBtn.set_text("Create Button"); //안에 내용
	objBtn.set_background("red"); //백 색깔
	objBtn.show(); //해줘야 눈에 보임
};


//컴포넌트 만든거 지우는 것 
this.btn_Exe2_2_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var objBtn = this.removeChild("btn_Comp");
	objBtn.destroy();
	objBtn = null;
};

//div 안에 컴포넌트 하나를 추가함 
this.btn_Exe2_3_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var objDivBtn = new Button();
	objDivBtn.init("btn_divComp",10,10,150,100);
	this.Div2.form.addChild("btn_divComp", objDivBtn);
	objDivBtn.set_text("Create Div Button");
	objDivBtn.set_background("red");
	objDivBtn.show();
};

//div 안에 있는 것을 삭제함
this.btn_Exe2_4_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var objBtn = this.Div2.form.removeChild("btn_divComp");
	objBtn.destroy();
	objBtn = null;
};

this.btn_Exe2_5_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{			
	if(!this.isValidObject(this.btn_Comp)) //해당 컴포가 없으면 만들어주고 btn_Comp - 위에 만들어준 컴포넌트 ID
	{
		this.btn_Exe2_1_onclick();
	}
	
	this.btn_Comp.addEventHandler("onclick", this.fn_temp, this); //컴포넌트가 애초에 있으면 알럿 이벤트만 추가 해줌
};

//만들어진 컴포넌트를 누르면 알림 나옴
this.fn_temp = function()
{
	this.alert("add Event Handle");
}

//컴포넌트에 동적 바인딩
this.btn_Exe2_6_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var objBindItem = new BindItem(); //스크립트 바인드
	objBindItem.init("item00", "edt_bind", "value", "Dataset2", "COL_NAME"); //item00 - 아이템 번호 유니크 하게 넣어야 한다
	this.addChild("item00", objBindItem);									 //edt_bind 컴포넌트
	objBindItem.bind();														 //value에 걸겠다
	
	var objBindItem = new BindItem();
	objBindItem.init("item01", "edt_bind", "width", "Dataset2", "COL_SIZE");	//width 를 COL_SIZE 에 연결 하겠다
	this.addChild("item01", objBindItem);
	objBindItem.bind();
	
	var objBindItem = new BindItem();
	objBindItem.init("item02", "edt_bind", "background", "Dataset2", "COL_COLOR");
	this.addChild("item02", objBindItem);
	objBindItem.bind();
};
]]></Script>
    <Bind>
