      <BindItem id="item1" compid="edt_bind" propid="background" datasetid="Dataset2" columnid="COL_COLOR"/>
      <BindItem id="item2" compid="edt_bind" propid="width" datasetid="Dataset2" columnid="COL_SIZE"/>
